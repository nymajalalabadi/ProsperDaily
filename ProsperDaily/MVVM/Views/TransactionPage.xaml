<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProsperDaily.MVVM.Views.TransactionPage"
             Title="TransactionPage">

    <Grid RowDefinitions=".15*, .15*, .70*">
        
        <RoundRectangle Grid.Row="0" Grid.RowSpan="2" StyleClass="TopRectangle" />
        
        <VerticalStackLayout Grid.Row="0" StyleClass="Header">
            <Label Text="Add Transaction" StyleClass="HeaderSubTitle" />
        </VerticalStackLayout>
        
        <Grid Grid.Row="1" Grid.RowSpan="2" StyleClass="BalanceGrid">
            
            <RoundRectangle StyleClass="BalanceRectangle" />

            <VerticalStackLayout Spacing="10" StyleClass="Padding25">

                <Label Text="Transaction Name" />

                <Frame StyleClass="FrameBorder">

                    <Entry Placeholder="{Binding Transaction.Name}" />

                </Frame>

                <Label Text="Amount" StyleClass="MarginT15" />

                <Frame StyleClass="FrameBorder">

                    <Entry Placeholder="{Binding Transaction.Amount}" VerticalOptions="Center" Keyboard="Numeric"/>

                </Frame>

                <Label Text="Transaction Date" StyleClass="MarginT15" />

                <Frame StyleClass="FrameBorder">

                    <DatePicker Date="{Binding Transaction.TransactionDate}"/>

                </Frame>

                <HorizontalStackLayout>
                    <CheckBox IsChecked="{Binding Transaction.IsIncome}"/>
                    <Label Text="Is Income?" VerticalOptions="Center" Margin="5,0,0,0"/>
                </HorizontalStackLayout>

                <Button Text="Save" StyleClass="MarginT15" x:Name="Save" Clicked="Save_Clicked"/>
                <Button Text="Cancel" StyleClass="MarginT15, RedControl" x:Name="Cancel" Clicked="Cancel_Clicked"/>

            </VerticalStackLayout>
            
        </Grid>
        

    </Grid>

</ContentPage>