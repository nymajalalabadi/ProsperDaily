<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProsperDaily.MVVM.Views.StatisticsPage"
             xmlns:chart="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
             Title="StatisticsPage">

    <Grid RowDefinitions=".15*, .15*, .30*, .40*">

        <RoundRectangle Grid.Row="0" Grid.RowSpan="2" StyleClass="TopRectangle" />

        <VerticalStackLayout Grid.Row="0" StyleClass="Header">
            <Label Text="Statistics" StyleClass="HeaderSubTitle" />
        </VerticalStackLayout>

        <Grid Grid.Row="1" Grid.RowSpan="2" StyleClass="BalanceGrid">
            
            <RoundRectangle StyleClass="BalanceRectangle" />

            <chart:SfCartesianChart Margin="5,5,20,5">
                
                <chart:SfCartesianChart.XAxes>
                    <chart:CategoryAxis />
                </chart:SfCartesianChart.XAxes>

                <chart:SfCartesianChart.YAxes>
                    <chart:NumericalAxis />
                </chart:SfCartesianChart.YAxes>

                <chart:SplineSeries ItemsSource="{Binding TransactionSummaries}" XBindingPath="ShownDate" YBindingPath="TransactionsTotal" />
                
            </chart:SfCartesianChart>



        </Grid>

        <Grid Grid.Row="3" RowDefinitions=".1*, .9*" StyleClass="Margin15">

            <Label Text="Top Spending" />

            <CollectionView Grid.Row="1" EmptyView="No Data" ItemsSource="{Binding SpendingList}">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="15" Orientation="Vertical"/>
                </CollectionView.ItemsLayout>

                <CollectionView.EmptyViewTemplate>
                    <DataTemplate>
                        <Grid>
                            <Label Text="No Data Found, Click on the + button to add a new Transaction" 
                        HorizontalOptions="Center" 
                        VerticalOptions="Center" 
                        StyleClass="NoDataText" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.EmptyViewTemplate>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*, *" RowDefinitions="*, *">
                            <Label Grid.Row="0" Grid.Column="0" StyleClass="StrongMediumTitle" Text="{Binding Name}"/>
                            <Label Grid.Row="1" Grid.Column="0" StyleClass="SmallFont" Text="{Binding OperationDate, StringFormat='{0/MM/dd/yyyy}'}" />
                            <Label Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" StyleClass="ListAmount" Text="{Binding Amount, StringFormat='{0:C}'}"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        </Grid>

    </Grid>

</ContentPage>